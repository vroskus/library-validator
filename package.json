    "moment": "2.29.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/express-validator": "^3.0.2",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/lodash": "^4.17.16",
    "@types/moment": "^2.13.0",
    "@types/node": "^22.14.0",
    "@vroskus/eslint-config": "^1.0.25",
    "body-parser": "^2.2.0",
    "jest": "^29.7.0",
    "jest-coverage-thresholds-bumper": "^1.1.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageReporters": [
