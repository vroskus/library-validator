{
  "name": "@vroskus/library-validator",
  "version": "1.0.1",
  "description": "Validator",
  "author": "Vilius Ro≈°kus <vilius@regattas.eu>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vroskus/library-validator.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "npm run build",
    "build": "tsc",
    "test": "npm run test:eslint && npm run test:e2e",
    "test:eslint": "eslint src test --fix",
    "test:e2e": "npm run test:e2e:run && npm run test:e2e:post",
    "test:e2e:run": "jest --ci --colors",
    "test:e2e:post": "jest-coverage-thresholds-bumper"
  },
  "dependencies": {
    "@types/express": "4.17.17",
    "@types/express-validator": "3.0.0",
    "@types/joi": "17.2.3",
    "@types/lodash": "4.14.192",
    "@types/moment": "2.13.0",
    "@vroskus/library-error": "1.0.2",
    "express": "4.18.2",
    "express-validator": "6.15.0",
    "is-uuid": "1.0.2",
    "joi": "17.8.3",
    "lodash": "4.17.21",
    "moment": "2.29.4"
  },
  "devDependencies": {
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "body-parser": "1.20.2",
    "eslint": "8.34.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-import-newlines": "1.3.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-sort": "2.4.0",
    "jest": "29.4.3",
    "jest-coverage-thresholds-bumper": "1.1.0",
    "npm-check": "6.0.1",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageReporters": [
      "json-summary",
      "text"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 87.5,
        "functions": 72.41,
        "lines": 78.15,
        "statements": 81.56
      }
    }
  }
}
